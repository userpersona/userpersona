extends layout

block content
  h1 #{title}: #{book.name}

  if book_bookinstances

    p #[strong Delete the following bookinstances before attempting to delete this book.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Bookinstances

      dl
      each bookinstance in book_bookinstances
        dt
          a(href=bookinstance.url) #{bookinstance.title}
        dd #{bookinstance.summary}

  else
    p Do you really want to delete this Book?

    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden',name='bookid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete